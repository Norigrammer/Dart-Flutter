rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    // Note: Storage ルールからは Firestore ドキュメントを参照できないため
    //       メンバー判定は行えません。ここでは認証済みユーザーに限定し、
    //       パスとコンテンツタイプ、サイズで制約します。
    match /pets/{petId}/logs/{fileName} {
      allow read, write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
  }
}
